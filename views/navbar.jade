nav.navbar.navbar-default
    div.container-fluid
        div.navbar-header
            button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target="#bs-example-navbar-collapse-1", aria-expanded="false")
                span.sr-only Toggle Navigation
                span.icon-bar
                span.icon-bar
                span.icon-bar
            a.navbar-brand(href="/") Demo Application
        div.collapse.navbar-collapse#bs-example-navbar-collapse-1
            if user
                ul.nav.navbar-nav.navbar-left
                    li.active
                        a(href="/users") Users
            ul.nav.navbar-nav.navbar-right
                if user
                    li.dropdown
                        a.dropdown-toggle(href="#", data-toggle="dropdown", role="button", aria-haspopup="true", aria-expanded="false") Account
                            span.caret
                        ul.dropdown-menu
                            li: a(href="/account") Preferences
                            li: a(href="/logout"): span.glyphicon.glyphicon-log-out &nbsp;Logout
                else
                    li: a(href="#", data-toggle="modal", data-target="#login-modal")
                        span.glyphicon.glyphicon-log-in &nbsp;Login
